# -*- shell-script -*-
# Sebastian Castillo <castillobuiles@gmail.com>

function set_eternal_history {
    export HISTTIMEFORMAT="%s "
    PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND ; }"'echo $$ $USER \
               "$(history 1)" >> ~/.bash_eternal_history'
}

function main {
    set_eternal_history
}
